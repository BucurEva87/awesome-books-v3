{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["airbnb-base"],
  "rules": {
    "no-shadow": "off",
    "@typescript-eslint/no-shadow": [
      "error",
      { "ignoreTypeValueShadow": true }
    ],
    "no-param-reassign": "off",
    "eol-last": "off",
    "import/extensions": [
      1,
      {
        "js": "never",
        "json": "always"
      }
    ]
  },
  "ignorePatterns": ["dist/", "build/"]
}
